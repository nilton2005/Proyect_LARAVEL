body
    background-color  wait
    margin 0px
    


.mtop16
    margin-top 16px
    .btn
        background-color: black


.box
    background-color #fff
    border-radius 8px
    border 2px solid #d6d6d6
    position absolute
    width 500px
    .btn-success
        width 100%
        background-color: red
        color #fff
        border 0px
        width 100%
    .form-control
        &:focus
        $:active
            outline  none
            box-shadow none
    .inside
        padding 16px
    .header
        background-color black
        border-radius: 8px 8px 0px 0px
        display flex
        padding 16px
        a
            display flex
            justify-content: center
        
            img
                width 30%
                align-items center


.box_login
    position fixed
    top 50%
    left 50%
    transform translate(-50%, -50%)

.box_register
    position fixed
